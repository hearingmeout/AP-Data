      {
        "label": "<p class=\"choice_paragraph\"><span class=\"formatted_text font_style:italic\">T. aquaticus</span> polymerase has an optimal temperature of <span class=\"math_expression\"><span aria-label=\"68 degrees Celsius \"><math alttext=\"68 degrees Celsius \" overflow=\"scroll\"><mstyle><mrow><mn>68</mn><mi>°</mi><mtext>C</mtext></mrow></mstyle></math></span></span>.</p>",
        "value": "i1"
      },
      {
        "label": "<p class=\"choice_paragraph\"><span class=\"formatted_text font_style:italic\">T. aquaticus</span> polymerase does not denature at high temperatures.</p>",
        "value": "i2"
      },
      {
        "label": "<p class=\"choice_paragraph\"><span class=\"formatted_text font_style:italic\">T. aquaticus</span> polymerase can be used more than once without degrading.</p>",
        "value": "i3"
      },
      {
        "label": "<p class=\"choice_paragraph\"><span class=\"formatted_text font_style:italic\">T. aquaticus</span> polymerase adds nucleotides to both the <span class=\"math_expression\"><span aria-label=\"3 prime\"><math alttext=\"3 prime\" overflow=\"scroll\"><mrow><mstyle mathvariant=\"normal\"><mrow><mn>3</mn><mo>′</mo></mrow></mstyle></mrow></math></span></span> and <span class=\"math_expression\"><span aria-label=\"5 prime\"><math alttext=\"5 prime\" overflow=\"scroll\"><mrow><mn>5</mn><mo>′</mo></mrow></math></span></span> ends of <span class=\"math_expression\"><span aria-label=\"D N A\"><math alttext=\"D N A\" overflow=\"scroll\"><mstyle><mrow><mtext>DNA</mtext></mrow></mstyle></math></span></span>.</p>",
        "value": "i4"
      }
